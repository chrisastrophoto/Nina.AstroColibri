<ResourceDictionary
    x:Class="ChristophNieswand.NINA.Astrocolibri.AstrocolibriDockables.MyPluginDockableTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:alt="clr-namespace:NINA.WPF.Base.View;assembly=NINA.WPF.Base"
    xmlns:local="clr-namespace:ChristophNieswand.NINA.Astrocolibri.AstrocolibriDockables"
    xmlns:mini="clr-namespace:NINA.View.Sequencer.MiniSequencer;assembly=NINA.Sequencer"
    xmlns:nina="clr-namespace:NINA.View.Sequencer;assembly=NINA.Sequencer"
    xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
    xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core">

    <DataTemplate x:Key="ChristophNieswand.NINA.Astrocolibri.AstrocolibriDockables.AstrocolibriDockable_Dockable">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="200"
                    Height="25"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding RunLatestTransientsCommand}"
                    Content="Check for Transients">
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="False">
                            <TextBlock Text="Check for Transients" />
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button
                    Width="25"
                    Height="25"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    BorderThickness="1"
                    Command="{Binding RemoveAllCommand}"
                    IsDefault="True"
                    IsEnabled="True"
                    IsManipulationEnabled="True"
                    Style="{StaticResource TertiaryBackgroundButton}"
                    Visibility="Visible">
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="False">
                            <TextBlock Text="Remove all Objects" />
                        </ToolTip>
                    </Button.ToolTip>
                    <Grid>
                        <Path
                            Margin="5"
                            Data="{StaticResource CancelSVG}"
                            Fill="{StaticResource ButtonForegroundBrush}"
                            Stretch="Uniform"
                            UseLayoutRounding="True" />
                    </Grid>
                </Button>
            </StackPanel>
            <DataGrid
                Name="MainGrid"
                Margin="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                AutoGenerateColumns="False"
                ItemsSource="{Binding Path=Targets}"
                Visibility="{Binding Targets, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="1000">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Name="InnerGrid" Margin="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25" />
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Width="25"
                                        Height="25"
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        BorderThickness="1"
                                        Command="{Binding DataContext.CoordsToFramingCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}, AncestorLevel=1}}"
                                        CommandParameter="{Binding DSO}"
                                        IsDefault="True"
                                        IsEnabled="True"
                                        IsManipulationEnabled="True"
                                        Style="{StaticResource TertiaryBackgroundButton}"
                                        Visibility="Visible">
                                        <Button.ToolTip>
                                            <ToolTip ToolTipService.ShowOnDisabled="False">
                                                <TextBlock Text="{ns:Loc LblCoordinatesToFramingTooltip}" />
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Grid>
                                            <Path
                                                Margin="5"
                                                Data="{StaticResource FocusAssistantSVG}"
                                                Fill="{StaticResource ButtonForegroundBrush}"
                                                Stretch="Uniform"
                                                UseLayoutRounding="True" />
                                        </Grid>
                                    </Button>
                                    <Button
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        Width="25"
                                        Height="25"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        BorderThickness="1"
                                        Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}, AncestorLevel=1}}"
                                        CommandParameter="{Binding DSO}"
                                        IsDefault="True"
                                        IsEnabled="True"
                                        IsManipulationEnabled="True"
                                        Style="{StaticResource TertiaryBackgroundButton}"
                                        Visibility="Visible">
                                        <Button.ToolTip>
                                            <ToolTip ToolTipService.ShowOnDisabled="False">
                                                <TextBlock Text="Remove this Object" />
                                            </ToolTip>
                                        </Button.ToolTip>
                                        <Grid>
                                            <Path
                                                Margin="5"
                                                Data="{StaticResource CancelSVG}"
                                                Fill="{StaticResource ButtonForegroundBrush}"
                                                Stretch="Uniform"
                                                UseLayoutRounding="True" />
                                        </Grid>
                                    </Button>
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="2"
                                        Grid.ColumnSpan="3"
                                        Height="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Text="{Binding DSO.Name}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="RA:" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding DSO.Coordinates.RAString}" />
                                    <Grid
                                        Grid.Row="1"
                                        Grid.RowSpan="13"
                                        Grid.Column="3">
                                        <Grid.Resources>
                                            <util:BindingProxy x:Key="nighttimeProxy" Data="{Binding DataContext.NighttimeData, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}, AncestorLevel=1}}" />
                                        </Grid.Resources>
                                        <alt:AltitudeChart
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            AnnotateAltitudeAxis="True"
                                            AnnotateTimeAxis="True"
                                            DataContext="{Binding DSO}"
                                            NighttimeData="{Binding Source={StaticResource nighttimeProxy}, Path=Data}" />
                                    </Grid>

                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Dec:" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding DSO.Coordinates.DecString}" />
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Error Radius:" />
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding Error}" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Trigger ID:" />
                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding Trigger_id}" />

                                    <TextBlock
                                        Grid.Row="5"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Time of discovery (UTC):" />
                                    <TextBlock
                                        Grid.Row="5"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding Time}" />
                                    <TextBlock
                                        Grid.Row="6"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Classification:" />
                                    <TextBlock
                                        Grid.Row="6"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding Classification}" />
                                    <TextBlock
                                        Grid.Row="7"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Type:" />
                                    <TextBlock
                                        Grid.Row="7"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding Type}" />
                                    <TextBlock
                                        Grid.Row="8"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Alert Type:" />
                                    <TextBlock
                                        Grid.Row="8"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding Alert_type}" />
                                    <TextBlock
                                        Grid.Row="9"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Flux:" />
                                    <TextBlock
                                        Grid.Row="9"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding Transient_flux}" />
                                    <TextBlock
                                        Grid.Row="10"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="Visibility:" />
                                    <TextBlock
                                        Grid.Row="10"
                                        Grid.Column="2"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Text="{Binding Visibility}" />
                                    <TextBlock
                                        Grid.Row="11"
                                        Grid.ColumnSpan="3"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Visibility="{Binding Img_url, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
                                        <Hyperlink NavigateUri="{Binding Img_url}" RequestNavigate="WebPageClick">
                                            Visibity chart (external)
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock
                                        Grid.Row="12"
                                        Grid.ColumnSpan="3"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Visibility="{Binding Url, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
                                        <Hyperlink NavigateUri="{Binding Url}" RequestNavigate="WebPageClick">
                                            Details (external)
                                        </Hyperlink>
                                    </TextBlock>
                                    <TextBlock
                                        Grid.Row="13"
                                        Grid.ColumnSpan="3"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Visibility="{Binding Event_url, Converter={StaticResource NullToVisibilityCollapsedConverter}}">
                                        <Hyperlink NavigateUri="{Binding Event_url}" RequestNavigate="WebPageClick">
                                            Event Url (external)
                                        </Hyperlink>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>